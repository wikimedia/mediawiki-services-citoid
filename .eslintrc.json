{
	"root": true,
	"extends": "wikimedia/server",
	"rules": {
		"camelcase": [
			"error",
			{
				"properties": "never"
			}
		],
		"computed-property-spacing": "off",
		"indent": [
			"error", 4, { "SwitchCase": 1 }
		],
		"max-statements-per-line": [
			"error",
			{
				"max": 2
			}
		],
		"no-underscore-dangle": "off",
		"no-unused-vars": [
			"error",
			{
				"args": "none"
			}
		],
		"no-shadow": "off",
		"prefer-regex-literals": "off",
		"space-in-parens": [
			"error",
			"never"
		]
	},
	"overrides": [
		{
			"files": [ "**/*.json", "**/*.jsonc" ],
			"rules": {
				"indent": [ "error", "tab" ]
			}
		}
	],
	"settings": {
		"jsdoc": {
			"preferredTypes": {
				"Application": "Application",
				"bluebird": "bluebird",
				"Citation": "Citation",
				"Request": "Request",
				"Router": "Router",
				"ServiceRunner": "ServiceRunner"
			}
		}
	}
}
